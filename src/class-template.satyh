  let default-title-deco ctx is-title-page title-f author-f date-f abstract-f =
    let fs = get-font-size ctx in
    if is-title-page then
      let main =
        title-f ctx +++
        block-skip (fs *' 2.0) +++
        author-f ctx
      in
      let date =
        match date-f ctx with
        | None -> block-nil
        | Some(b) -> block-skip fs +++ b
      in
      match abstract-f ctx with
      | None -> [(0.4, main +++ date)]
      | Some(bb) -> [(0.4, main +++ date); (0.3, bb)]
    else
      let date =
        match date-f ctx with
        | None -> block-nil
        | Some(b) -> block-skip fs +++ b
      in
      let abstract =
        match abstract-f ctx with
        | None -> block-nil
        | Some(b) -> block-skip fs +++ b
      in
      [(
        0.45,
        title-f ctx +++
        block-skip (fs *' 0.5) +++
        author-f ctx +++
        block-skip 0pt +++
        date +++
        abstract +++
        block-skip (fs *' 1.0)
      )]


  let default-footer ctx _ _ n =
    let n =
      n
      |> embed-string
      |> read-inline ctx
    in
    block-skip (get-font-size ctx) +++
    line-break true true ctx (inline-fil ++ n ++ inline-fil)


